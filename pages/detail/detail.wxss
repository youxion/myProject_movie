/* pages/detail/detail.wxss */
.detail_box {
  display: flex;
  flex-direction: column;
}
.box_imgTop{
  position: relative;
}
.play_pause{
  position: absolute;
  top: 50%;
  margin-top: -50rpx;
  left: 50%;
  margin-left: -50rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 10;

}
.img_top{
  width: 100%;
  height: 340rpx;
}  
.speaker_info {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 10rpx;

}
.speaker_info image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-left: 10rpx;
}
.speaker_info text{
  vertical-align: middle;
  margin-left: 20rpx;
}
.company_name {
  font-size: 32rpx;
  font-weight: 700;

}
.share_box {
  position: relative;
  padding: 10rpx 0;
  height: 40rpx;
}
.share {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.share image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;

}
.line {
  position: absolute;
  left: 5%;
  top: 50%;
  margin-top: -2rpx;
  width: 90%;
  height: 4rpx;
  background: #eee;
  z-index: -1;

}
button {
  width: 280rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.article_con {
  width: 100%;
  display: block;
  font-size: 24rpx;
  text-indent: 32rpx;
  line-height: 35rpx;
  letter-spacing: 2rpx;
  border: 1rpx solid red;
  padding-top: 20rpx;

}
