/* pages/movieDetail/movieDetail.wxss */
@import '/pages/public/css/reset.wxss';

.movie_detail{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movie_img{
  width: 400rpx;
  height: 520rpx;
  padding: 30rpx 0 40rpx 0;
}
.movie_title{
  font-size: 36rpx;
  font-weight: 700;
}
.movie_info{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 30rpx 0 20rpx 0;
  font-size: 28rpx;
  width: 300rpx;
  line-height: 45rpx;
}
.see_movie{
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: green;
  color: #fff;
}

