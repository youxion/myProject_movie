}
.footer-tip view{
  height: 40rpx;
  line-height: 40rpx;

}
.footer-tip image{
  margin-left: 5rpx;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;

}
.approve{
  margin-left: 30rpx;
}
.footer-tip text{
  margin-left: 5rpx;
  height: 40rpx;
