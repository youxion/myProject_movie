.box-tmp{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
}
.time{
  padding: 30rpx;
  /* border: 1rpx solid red; */
}
.time text{
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 10rpx;
  /* border: 1rpx solid red; */

}
.time image{
  width: 40rpx;
  height: 40rpx;
  /* border: 1rpx solid red; */
  border-radius: 50%;
  vertical-align: middle;
  
}

.content-box{
  /* border: 1rpx solid red; */
}
.teach{
  font-size: 28rpx;
  font-weight: 700;
  margin: 10rpx 0;

}
.main-img{
  width: 100%;
  height: 300rpx;
  padding: 10rpx 0;
  /* border: 1rpx solid red; */
}
.content-box .discription{
  width: 100%;
  line-height: 40rpx;
  display: block;
  font-size: 28rpx;
  text-indent: 32rpx;
  /* border: 1rpx solid red; */
